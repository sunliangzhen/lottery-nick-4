<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#f5f5f5"
    android:fitsSystemWindows="true"
    android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/relay_top"
        android:layout_width="match_parent"
        android:layout_height="150px"
        android:background="#fff">

        <ImageView
            android:id="@+id/imgv_back"
            android:layout_width="50px"
            android:layout_height="50px"
            android:layout_centerVertical="true"
            android:layout_marginLeft="30px"
            android:src="@drawable/ic_back2" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="登录"
            android:textColor="#000"
            android:textSize="45px" />
        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:background="#dbdbdb"
            android:layout_alignParentBottom="true"
            />
    </RelativeLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="150px"
        android:focusable="true"
        android:focusableInTouchMode="true"
        android:orientation="vertical"
       >

        <LinearLayout
            android:background="@color/white"
            android:layout_width="match_parent"
            android:layout_height="150px"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <EditText
                android:id="@+id/userName"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="60px"
                android:background="@null"
                android:hint="请输入手机号/用户名"
                android:inputType="text"
                android:maxLength="20"
                android:maxLines="1"
                android:textColor="#444"
                android:textColorHint="#ababab"
                android:textCursorDrawable="@drawable/shap_editext_c"
                android:textSize="50px" />
        </LinearLayout>


        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:background="#dbdbdb" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="150px"
            android:gravity="center_vertical"
            android:background="@color/white"
            android:orientation="horizontal">


            <EditText
                android:id="@+id/password"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="60px"
                android:background="@null"
                android:hint="请输入密码"
                android:inputType="textPassword"
                android:maxLength="20"
                android:maxLines="1"
                android:textColor="#444"
                android:textColorHint="#ababab"
                android:textCursorDrawable="@drawable/shap_editext_c"
                android:textSize="50px" />
        </LinearLayout>


        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:background="#dbdbdb" />

        <RelativeLayout
            android:id="@+id/dddd_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="30px"
            android:paddingLeft="30px"
            android:paddingRight="30px">

            <TextView
                android:id="@+id/find_password_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:text=""
                android:textColor="#ababab"
                android:textSize="36px" />
        </RelativeLayout>

        <Button
            android:layout_marginRight="30px"
            android:layout_marginLeft="30px"
            android:id="@+id/loginButton"
            android:layout_width="match_parent"
            android:layout_height="120px"
            android:layout_below="@id/dddd_layout"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="50px"
            android:background="@drawable/login_btn_bg"
            android:text="登录"
            android:textColor="@color/white"
            android:textSize="50px" />

        <TextView
            android:layout_marginRight="30px"
            android:layout_marginLeft="30px"
            android:id="@+id/regTextView"
            android:layout_width="match_parent"
            android:layout_height="120px"
            android:layout_below="@id/dddd_layout"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="50px"
            android:gravity="center"
            android:background="@drawable/register_btn_bg"
            android:text="免费注册"
            android:textColor="@color/login_btn"
            android:textSize="50px" />


    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_alignParentBottom="true"
        android:visibility="gone"
        android:layout_marginBottom="50px"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="客服电话："
            android:textColor="#ababab"
            android:textSize="36px" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/service_Telephone"
            android:textColor="#ababab"
            android:textSize="36px" />
    </LinearLayout>
</RelativeLayout>
