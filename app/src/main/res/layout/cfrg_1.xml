<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/linlay_bottom"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#f5f5f5"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <WebView
            android:id="@+id/webView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scrollbars="none"></WebView>

        <RelativeLayout
            android:id="@+id/relay_01"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            >


            <RelativeLayout
                android:id="@+id/relay_cehua"
                android:layout_width="150px"
                android:layout_height="match_parent">

                <ImageView
                    android:id="@+id/imgv_cehua"
                    android:layout_width="50px"
                    android:layout_height="50px"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="30px"
                   />
            </RelativeLayout>

            <TextView
                android:id="@+id/in_tv_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:textStyle="bold" />
        </RelativeLayout>

        <com.example.machenike.myapplication.commonwidget.LoadingDataTip
            android:id="@+id/loadedTip"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@+id/relay_01"
            android:layout_gravity="center"
            android:gravity="center" />

    </RelativeLayout>

</LinearLayout>
